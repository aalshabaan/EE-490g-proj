<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.myapp.main_video">


    <VideoView
        android:id="@+id/video_view_main"
        android:layout_width="match_parent"
        android:layout_height="340dp"

        android:backgroundTint="@android:color/black" />
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Video name "
        android:textSize="20sp"
        android:id="@+id/et_video_name"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/black"
        android:autoText="true"
        />
    
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Choose Video"
     android:layout_gravity="center"
     android:onClick="choose_video"
     android:layout_marginTop="20dp"
     />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Video"
        android:layout_gravity="center"
        android:onClick="show_video"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/button_upload_main"
        android:layout_gravity="center"
        android:layout_margin="30dp"

        />
    
</LinearLayout>